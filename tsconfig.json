{
  "compilerOptions": {
    /* Projects */
    "target": "es2016",                                   
    "module": "nodenext",                                   /* Specify module code generation */
    "moduleResolution": "nodenext",                          /* Specify module resolution strategy */
    "outDir": "./dist",                                      /* Directory for compiled files */
    "rootDir": "./src",                                      /* Root directory of your TypeScript source files */
    "resolveJsonModule": true,                               /* Allow importing .json files */
    "esModuleInterop": true,                                 /* Enable interop between CommonJS and ES Modules */
    "strict": true,                                          /* Enable all strict type-checking options */
    "forceConsistentCasingInFileNames": true,                /* Ensure correct casing in imports */
    "skipLibCheck": true,                                    /* Skip type checking for declaration files */
    "removeComments": true,                                  /* Strip comments in compiled JS files */
    "sourceMap": true,                                       /* Generate source maps for debugging */
    "noEmitOnError": true,                                   /* Don't emit files if there are type errors */
    "declaration": true,                                     /* Generate declaration files (.d.ts) */
    "declarationMap": true,                                  /* Generate declaration map files */
    "noEmitHelpers": true,                                   /* Don't emit helper functions */
    "isolatedModules": true                                  /* Ensure that every file can be safely transpiled */
  },
  "include": [
    "src/**/*"                                               /* Include all TypeScript files under src/ */
  ]
}
